<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoActivities"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="304dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="66dp">

        <Button
            android:id="@+id/boton1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="1" />

        <Button
            android:id="@+id/boton2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="2" />

        <Button
            android:id="@+id/boton3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="3" />

        <Button
            android:id="@+id/boton4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="4" />

        <Button
            android:id="@+id/boton5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="5" />

        <Button
            android:id="@+id/boton6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="6" />

        <Button
            android:id="@+id/boton7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="7" />

        <Button
            android:id="@+id/boton8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="8" />

        <Button
            android:id="@+id/boton9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="9" />

        <Button
            android:id="@+id/boton0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="0" />

        <Button
            android:id="@+id/boton00"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/boton_redondo"
            android:text="00" />

        <ImageView
            android:id="@+id/botonDelete"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/boton_redondo"
            app:srcCompat="@drawable/baseline_keyboard_backspace_black_48" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>